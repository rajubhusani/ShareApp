<resources>
    <attr name="uberButtonStyle" format="reference" />

    <attr name="ub__style">
        <enum name="black" value="0" />
        <enum name="white" value="1" />
    </attr>
    
    <declare-styleable name="UberButton">
        <attr name="ub__style"/>
        <attr name="android:textStyle"/>
    </declare-styleable>

    <declare-styleable name="LoginButton">
        <!-- Scopes requested as part of the login. See com.uber.sdk.android.core.auth.Scope -->
        <attr name="ub__scopes">
            <flag name="history" value="1" />
            <flag name="history_lite" value="2" />
            <flag name="payment_methods" value="4" />
            <flag name="places" value="8" />
            <flag name="profile" value="16" />
            <flag name="ride_widgets" value="32" />
            <flag name="request" value="64" />
            <flag name="request_receipt" value="128" />
            <flag name="all_trips" value="256" />
        </attr>

        <!-- Request code to be used by activity -->
        <attr name="ub__request_code" format="integer" />
    </declare-styleable>
</resources>
